<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- render 'section-variables', section: section -%}
    --section-blocks-count: {{ section.blocks.size }};
  }
</style>

<div class="section section--padding{% if section.settings.divider %} section--divider{% endif %}{% if section.settings.rounded %} section--rounded relative{% endif %}">
  <div class="page-width{% if section.settings.full_width %} page-width--full{% endif %} relative overflow-hidden md:overflow-visible">
    {%- capture indicators -%}
      {%- if section.blocks.size > 1 -%}
        <div class="indicators hidden lg:flex gap-2d5">
          <button class="button button--secondary" type="button" is="previous-button" aria-controls="Slider-{{ section.id }}" aria-label="{{ 'general.pagination.previous' | t | escape }}" disabled>
            <span class="btn-fill" data-fill></span>
            <span class="btn-text">
              {%- render 'icon', icon: 'chevron-left', class: 'transform' -%}
            </span>
          </button>
          <button class="button button--secondary" type="button" is="next-button" aria-controls="Slider-{{ section.id }}" aria-label="{{ 'general.pagination.next' | t | escape }}">
            <span class="btn-fill" data-fill></span>
            <span class="btn-text">
              {%- render 'icon', icon: 'chevron-right', class: 'transform' -%}
            </span>
          </button>
        </div>
      {%- endif -%}
    {%- endcapture -%}
    {%- render 'section-heading', section: section, section_button: indicators -%}

    {%- if section.blocks.size > 0 -%}
      <slider-element id="Slider-{{ section.id }}" class="grid slider slider--desktop slider--tablet" selector=".card-grid>.card">
        <motion-list class="timeline card-grid grid{% if section.blocks.size == 1 %} with-only1{% endif %}">
          {%- liquid
            assign with_gradient = false
            if section.settings.gradient_highlight != blank and section.settings.gradient_highlight != 'rgba(0,0,0,0)'
              assign with_gradient = true
            endif
          -%}
          {%- for block in section.blocks -%}
            <div class="timeline__item card{% if forloop.first %} selected{% endif %} relative" {{ block.shopify_attributes }}>
              <div class="flex flex-col md:grid grid-cols-2 overflow-hidden">
                <picture class="media media--{{ section.settings.image_ratio }} mobile:media--{{ section.settings.image_ratio_mobile }} block relative overflow-hidden">
                  {%- if block.settings.image != blank -%}
                    {%- assign sizes = '(max-width: 767px) 100vw, 50vw' -%}
                    {%- if block.settings.image_mobile -%}
                      <source
                        media="(max-width: 767px)"
                        srcset="{{ block.settings.image_mobile | image_url: width: '400x' }} 400w, {{ block.settings.image_mobile | image_url: width: '600x' }} 600w, {{ block.settings.image_mobile | image_url: width: '800x' }} 800w, {{ block.settings.image_mobile | image_url: width: '1000x' }} 1000w"
                        width="{{ block.settings.image_mobile.width }}"
                        height="{{ block.settings.image_mobile.height }}"
                      >
                    {%- endif -%}

                    {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: 'lazy', sizes: sizes, widths: '300,400,500,600,700,800,900,1000,1200,1400,1600', is: 'lazy-image' -}}
                  {%- else -%}
                    {%- capture placeholder -%}{% cycle 'collection-1', 'collection-2', 'collection-3', 'collection-4', 'collection-5', 'collection-6' %}{%- endcapture -%}
                    {{- placeholder | placeholder_svg_tag: 'placeholder' -}}
                  {%- endif -%}
                </picture>
                <div class="timeline__item-content flex flex-col gap-4">
                  {%- if block.settings.subheading != blank -%}
                    <p class="text-opacity text-base lg:text-lg font-bold tracking-tight">{{ block.settings.subheading | escape }}</p>
                  {%- endif -%}

                  {%- if block.settings.heading != blank -%}
                    <{{ block.settings.heading_tag }} class="heading lg:text-3xl text-2xl leading-none tracking-tight">
                      {%- if block.settings.highlighted_text == 'none' -%}
                        <split-words class="split-words block" data-animate="fade-up-large">{{ block.settings.heading }}</split-words>
                      {%- else -%}
                        {%- render 'highlighted-text', content: block.settings.heading, style: block.settings.highlighted_text, scribble: block.settings.highlighted_scribble, gradient: with_gradient -%}
                      {%- endif -%}
                    </{{ block.settings.heading_tag }}>
                  {%- endif -%}

                  {%- if block.settings.text != blank -%}
                    <div class="rte text-opacity text-base lg:text-lg">
                      {%- render 'highlighted-text', content: block.settings.text, style: block.settings.highlighted_text, scribble: block.settings.highlighted_scribble, gradient: with_gradient -%}
                    </div>
                  {%- endif -%}

                  {%- if block.settings.button_label != blank -%}
                    <p>
                      {%- render 'button',
                        label: block.settings.button_label,
                        link: block.settings.button_link,
                        style: block.settings.button_style,
                        external: block.settings.button_external,
                        show_icon: block.settings.button_icon
                      -%}
                    </p>
                  {%- endif -%}
                </div>
              </div>
            </div>
          {%- endfor -%}
        </motion-list>
      </slider-element>

      {%- if section.blocks.size > 1 -%}
        <div class="scroll-area">
          <slider-dots class="timeline-dots grid gap-2d5" align-selected=".scroll-area" aria-controls="Slider-{{ section.id }}">
            {%- for block in section.blocks -%}
              <button type="button" class="heading text-lg text-left flex items-center gap-2d5" data-index="{{ forloop.index }}" aria-current="{% if forloop.first %}true{% else %}false{% endif %}">
                <span class="sr-only">{{ 'general.pagination.page' | t: number: forloop.index }}</span>
                {%- liquid
                  if block.settings.subheading != blank
                    echo block.settings.subheading | escape
                  else
                    echo forloop.index
                  endif
                -%}
              </button>
            {%- endfor -%}
          </slider-dots>
        </div>
      {%- endif -%}
    {%- endif -%}
  </div>
</div>

