<link rel="stylesheet" href="{{ 'wholesale-page-main-section.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'custom-global.css' | asset_url }}">

<section class="wholesale-page-main-section pt-5 pb-5">
    <div class="wholesale-page-main-section__container custom-container">
        <div class="wholesale-page-main-section__title-wrapper">
            <div class="wholesale-page-main-section__content-title text-center">
                <h3 style=" color: {{ section.settings.title_color }};">{{ section.settings.title }}</h3>
            </div>
            <div class="wholesale-page-main-section__content mt-3">
                <div class="wholesale-page-main-section__content-form" style="background-image: url({{ section.settings.contact_section_image | img_url: 'master' }});">
                    <a href="javascript:void(0)" class="wholesale-page-main-section__content-form-button js-open-wholesale-popup">{{ section.settings.apply_button_text }}</a>
                </div>
                <div class="wholesale-page-main-section__content-login" style="background-image: url({{ section.settings.login_section_image | img_url: 'master' }});">
                    <a href="{{ section.settings.login_url }}" class="wholesale-page-main-section__content-login-button">{{ section.settings.login_button_text }}</a>
                </div>
            </div>
        </div>
    </div>

    <div class="wholesale-page-main-section__descriptions mt-4 mb-4">
        <div class="wholesale-page-main-section__descriptions-container custom-container">
            <div class="wholesale-page-main-section__descriptions-item text-center">
                <h2>{{ section.settings.description_title }}</h2>
                <div class="wholesale-page-main-section__descriptions-item-text text-center mt-2">
                    {{ section.settings.description_text }}
                </div>
            </div>
        </div>
    </div>
    
    
    
    <!-- Popup -->
    {% comment %} <div class="wholesale-popup" id="wholesale-popup">
