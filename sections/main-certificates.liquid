<style>
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .certificate-links{
    margin-top: 1rem;
  }

  .title{
    margin-bottom: 0.5rem;
  }

  .certificate-link{
    margin-bottom: 0.5rem;
  }

  .certificates-wrapper {
    margin-top: 50px;
  }

  /* .certificate-block{
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  } */
</style>

<div class="section--padding">
  <div class="page-width">
    <div class="title-wrapper text-center">
      <h1 class="title title-xl">{{ section.settings.title }}</h1>
    </div>

    {% if section.settings.warning_statements != blank %}
      <div class="rte mt-8">
        {{ section.settings.warning_statements }}
      </div>
    {% endif %}

    <div class="certificates-wrapper mt-12">
      {% for block in section.blocks %}
        {% if block.type == 'product_certificates' %}
          <div class="certificate-block mb-12" {{ block.shopify_attributes }}>
            <h2 class="title title-m mb-4">{{ block.settings.product_title }}</h2>
            {% if block.settings.description != blank %}
              <div class="rte mb-6">{{ block.settings.description }}</div>
            {% endif %}
            
            <div class="certificate-links">
              {% for i in (1..10) %}
                {% assign title_key = 'cert_title_' | append: i %}
                {% assign link_key = 'cert_link_' | append: i %}
                {% if block.settings[title_key] != blank and block.settings[link_key] != blank %}
                  <div class="certificate-link mt-4 mb-2">
                    <a href="{{ block.settings[link_key] }}" class="link text-lg" target="_blank">
                      {{ block.settings[title_key] }}
                    </a>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

